require('angular')
`_ = require('lodash')`
require('angular-lodash/angular-lodash')
require('restangular')
require('angular-bootstrap/ui-bootstrap-tpls-0.11.2')
require('angular-ui-router')
require('angular-xeditable/dist/js/xeditable')

require('auth')

angular.module('cobudget', [
  'restangular',
  'ui.router',
  'ui.bootstrap',
  'xeditable',
  'auth',
])

# configs
.constant('config', require('config'))
.config(require('restangular/restangular-config.coffee'))
.config(require('./routes.coffee'))
.run((editableOptions) ->
  editableOptions.theme = 'bs3'
)
# controllers
.controller('ApplicationController', require('./controller.js'))
# directives
.directive('cbNavBar', require('nav-bar'))
.directive('cbTabBar', require('tab-bar'))
.directive('cbBanner', require('banner'))
.directive('contributionStatus', require('contribution-status'))
# models
.factory("AllocationModel", require('allocation-model'))
.factory("BucketModel", require('bucket-model'))
.factory("ContributionModel", require('contribution-model'))
.factory("GroupModel", require('group-model'))
.factory("RoundModel", require('round-model'))
.factory("UserModel", require('user-model'))
.factory("FixedCostModel", require('fixed-cost-model'))
.factory("MembershipModel", require('membership-model'))
# stores
.service("UsersStore", require('users-store'))
.service("BucketsStore", require('buckets-store'))
.service("ContributionsStore", require('contributions-store'))
.service("GroupsStore", require('groups-store'))
.service("RoundsStore", require('rounds-store'))
.service("FixedCostsStore", require('fixed-costs-store'))
.service("MembershipsStore", require('memberships-store'))
