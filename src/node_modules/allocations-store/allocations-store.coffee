module.exports = (Restangular) ->

  create: (allocation) ->
    Restangular.all('allocations').post(allocation)

  update: (allocation) ->
    Restangular.one('allocations', allocation.id)
    .customPUT(allocation, '',
      {allocation: allocation},
      {Accept: "application/json"})

  save: (allocation) ->
    if allocation.id
      @update(allocation)
    else
      @create(allocation)
