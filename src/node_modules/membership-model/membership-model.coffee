module.exports = ->
  class MembershipModel
    constructor: (data = {}) ->
      @id = data.id
      @groupId = data.group_id
      @userId = data.user_id

    serialize: ->
      {
        id: @id
        group_id: @groupId
        user_id: @userId
      }

    save: (MembershipsStore) ->
      unsaved = @serialize()
      self = @
      MembershipsStore.save(unsaved).then (saved) ->
        if saved
          self.id = saved.id
